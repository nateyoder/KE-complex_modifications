{
  "title": "Citrix Remap Mac to Win (ctrl, option, cmd) -> (ctrl, win, alt) -> (ctrl, atl, ctrl)",
  "rules": [
    {
      "description": "In Citrix, add fn modifier to Tab so it is forwarded",
      "manipulators": [
        {
          "from": {
            "key_code": "tab",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": {
            "key_code": "tab",
            "modifiers": [
              "fn"
            ]
          },
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.citrix\\.XenAppViewer$",
                "^com\\.citrix\\.receiver\\.icaviewer\\.mac$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "In Citrix, change left_option to Windows key via \"⌘⌥ Command (right)\"",
      "manipulators": [
        {
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": {
            "key_code": "right_command"
          },
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.citrix\\.XenAppViewer$",
                "^com\\.citrix\\.receiver\\.icaviewer\\.mac$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "In Citrix, remap delete to shift + delete.",
      "manipulators": [
        {
          "from": {
            "key_code": "delete_or_backspace"
          },
          "to": {
            "key_code": "delete_or_backspace",
            "modifiers": [
              "left_shift"
            ]
          },
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.citrix\\.XenAppViewer$",
                "^com\\.citrix\\.receiver\\.icaviewer\\.mac$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
