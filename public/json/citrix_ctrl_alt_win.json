{
    "title": "Citrix Receiver/Workspace modifiers to remap mac to win so that PowerTools can unmap them... (ctrl, option, cmd) -> (ctrl, win, alt) -> (ctrl, atl, ctrl)",
    "rules": [
        {
            "description": "In Citrix, add fn modifier to Tab so it is forwarded",
            "manipulators": [
                {
                    "from": {
                        "key_code": "tab",
                        "modifiers": { "optional": [ "any" ] }
                    },
                    "to": {
                        "key_code": "tab",
                        "modifiers": [ "fn" ]
                    },
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.citrix\\.XenAppViewer$",
                                "^com\\.citrix\\.receiver\\.icaviewer\\.mac$"
                            ]
                        }
                    ]
                }
            ]
        }, {
            "description": "In Citrix, change left_option to Windows key via \"⌘⌥ Command (right)\"",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_option",
                        "modifiers": { "optional": [ "any" ] }
                    },
                    "to": {
                        "key_code": "right_command",
                    },
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.citrix\\.XenAppViewer$",
                                "^com\\.citrix\\.receiver\\.icaviewer\\.mac$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
